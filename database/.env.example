# HotGigs ATS Database Configuration
# Copy this file to .env and update with your actual database credentials

# Database Connection Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hotgigs_db
DB_USER=hotgigs_user
DB_PASSWORD=your_secure_password

# Optional: SSL Configuration
# DB_SSLMODE=require
# DB_SSLCERT=/path/to/client-cert.pem
# DB_SSLKEY=/path/to/client-key.pem
# DB_SSLROOTCERT=/path/to/ca-cert.pem

# Migration Settings
MIGRATION_TIMEOUT=300
MIGRATION_LOG_LEVEL=INFO

# Backup Settings (for production)
# BACKUP_BEFORE_MIGRATION=true
# BACKUP_RETENTION_DAYS=30

